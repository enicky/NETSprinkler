{
  "DBConfiguration": {
    "ConnectionString": "Server=127.0.0.1;Database=NetSprinkler;User Id=sa;Password=Aveve2008;MultipleActiveResultSets=true;TrustServerCertificate=True",
    "ApplicationName": "WebAPI"
  },
  "Logging": {
    "LogLevel": {
      "Default": "None",
      "Microsoft": "None",
      "Microsoft.AspNetCore": "None",
      "System": "None"
    }
  },
  "Serilog": {
    "Using":  [ "Serilog.Sinks.Console"],
    "MinimumLevel": "Information",
    "WriteTo": [
      { "Name": "Console" }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ],
